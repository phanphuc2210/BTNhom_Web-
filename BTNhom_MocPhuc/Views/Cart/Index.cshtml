@model List<BTNhom_MocPhuc.Models.CartItem>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<div class="banner-page">
    <h1 class="text-light fst-italic">Giỏ hàng</h1>
</div>

<div class="breadcrumb py-3">
    <div class="container">
        <a href="/">Trang chủ &nbsp;</a>
        <span class="text-origin">Giỏ hàng</span>
    </div>
</div>

<div class="container">
    <table class="table table-striped table-hover mt-4">
        <thead>
            <tr>
                <th scope="col" class="text-center">Hình ảnh</th>
                <th scope="col" class="text-center">Tên sản phẩm</th>
                <th scope="col" class="text-center">Đơn giá</th>
                <th scope="col" class="text-center">Số lượng</th>
                <th scope="col" class="text-center">Thành tiền</th>
                <th scope="col" class="text-center">Xóa</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            <img src="/Images/@item.sanPham.IMG" width="64px" />
                        </td>
                        <td class="text-center">@item.sanPham.TENSP</td>
                        <td class="text-center">@item.sanPham.GIABAN.Value.ToString("N0") vnđ</td>
                        <td class="text-center w-25">
                            <div class="form-group">
                                <span class="btn fw-bold">-</span>
                                <input class="d-inline form-control w-20 text-center soluong" data-id="@item.sanPham.MASP" type="text" value="@item.soLuong">
                                <span class="btn fw-bold">+</span>
                            </div>
                        </td>
                        <td class="text-center">@((item.sanPham.GIABAN * item.soLuong).Value.ToString("N0")) vnđ</td>
                        <td class="text-center"><a href="#" data-id="@item.sanPham.MASP" class="text-dark btnDelete"><i class="bi bi-trash3"></i></a></td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6">Chưa có sản phẩm trong giỏi hàng. <a href="/">Về trang chủ</a></td>
                </tr>
            }

        </tbody>
    </table>


    <div class="d-flex mt-3">
        <a href="/" class="btn btn-dark me-auto">Tiếp tục mua hàng</a>
        <button type="button" class="btn btn-dark ms-auto" id="btnDeleteAll">Xóa giỏ hàng</button>
        <button type="button" class="btn btn-dark ms-auto" id="btnUpdate">Cập nhật giỏ hàng</button>
    </div>

    <div class="d-flex flex-column mt-5">
        <div class="ms-auto mb-3 fs-5"><span class="fw-bold me-3 text-origin">Tổng tiền thanh toán</span><span>2.000.000 vnd</span></div>
        <a role="button" href="/Cart/Payment" class="btn btn-dark ms-auto">Thanh toán</a>
    </div>
</div>



<script>
    $("#btnUpdate").off("click").on("click", function () {
        var listSP = $(".soluong");
        var cartList = [];
        $.each(listSP, function (i, item) {
            cartList.push({
                soLuong: $(item).val(),
                sanPham: {
                    MASP: $(item).data("id")
                }
            });
        });

        $.ajax({
            url: "/Cart/Update",
            data: { cartModel: JSON.stringify(cartList) },
            dataType: "json",
            type: "POST",
            success: function (res) {
                if (res.status == true) {
                    window.location.href = "/Cart/Index"
                }
            }
        })
    });

    $("#btnDeleteAll").off("click").on("click", function () {
      

        $.ajax({
            url: "/Cart/DeleteAll",
            dataType: "json",
            type: "POST",
            success: function (res) {
                if (res.status == true) {
                    window.location.href = "/Cart/Index"
                }
            }
        })
    });

    $(".btnDelete").off("click").on("click", function (e) {

        e.preventDefault();
        $.ajax({
            url: "/Cart/Delete",
            data: { maSP: $(this).data("id") },
            dataType: "json",
            type: "POST",
            success: function (res) {
                if (res.status == true) {
                    window.location.href = "/Cart/Index"
                }
            }
        })
    });
</script>