<div class="container">
    <table class="table table-striped table-hover mt-4">
        <thead>
            <tr>
                <th scope="col" class="text-center">Hình ảnh</th>
                <th scope="col" class="text-center">Tên sản phẩm</th>
                <th scope="col" class="text-center">Đơn giá</th>
                <th scope="col" class="text-center">Số lượng</th>
                <th scope="col" class="text-center">Thành tiền</th>
                <th scope="col" class="text-center">Xóa</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="text-center">
                    <img src="https://bizweb.dktcdn.net/thumb/large/100/360/933/products/giuong-ngu-go-chat-luong-cao-cho-gia-dinh-ghs-9071-ava.jpg?v=1565273414883" width="64px" />
                </td>
                <td class="text-center">Giường ngủ gỗ cho gia đình</td>
                <td class="text-center">1.000.000 vnd</td>
                <td class="text-center w-25">
                    <div class="form-group ">

                        <span class="btn fw-bold">-</span>
                        <input class="d-inline form-control w-20 text-center" id="soluong" type="text" value="10">
                        <span class="btn fw-bold">+</span>

                    </div>
                </td>
                <td class="text-center">1.000.000 vnd</td>
                <td class="text-center"><i class="bi bi-trash3"></i></td>
            </tr>
            <tr>
                <td class="text-center">
                    <img src="https://bizweb.dktcdn.net/thumb/large/100/360/933/products/ezgif-2-c7f2105dbc1a.jpg?v=1565273733053" width="64px" />
                </td>
                <td class="text-center">Giường ngủ gỗ thiết kế thông minh</td>
                <td class="text-center">1.000.000 vnd</td>
                <td class="text-center w-25">
                    <div class="form-group">

                        <span class="btn fw-bold">-</span>
                        <input class="d-inline form-control w-20 text-center" id="soluong" type="text" value="1">
                        <span class="btn fw-bold">+</span>

                    </div>
                </td>
                <td class="text-center">1.000.000 vnd</td>
                <td class="text-center"><i class="bi bi-trash3"></i></td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex mt-3">
        <a href="/" class="btn btn-dark me-auto">Tiếp tục mua hàng</a>
        <button type="button" class="btn btn-dark ms-auto">Xóa giỏ hàng</button>
    </div>
    <div class="d-flex flex-column mt-5">
        <div class="ms-auto mb-3 fs-5"><span class="fw-bold me-3 text-origin">Tổng tiền thanh toán</span><span>2.000.000 vnd</span></div>
        <button type="submit" class="btn btn-dark ms-auto">Thanh toán</button>
    </div>
</div>
