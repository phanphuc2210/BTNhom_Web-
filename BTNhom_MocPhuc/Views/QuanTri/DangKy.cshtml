@model BTNhom_MocPhuc.Models.NHANVIEN

@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/LayoutQuanTri.cshtml";
}

<div class="container d-flex flex-column align-items-center">
    <form class="d-flex flex-column w-50 mt-4" method="post" action="/QuanTri/DangKy">
        @Html.AntiForgeryToken()


        <h3 class="text-center">Đăng ký thông tin tài khoản</h3>

        <div class="form-group row my-4">

            <div class="col-4">
                <label for="HO" class="form-label">Họ <span class="text-danger">*</span></label>
                @Html.EditorFor(model => model.HO, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HO, "", new { @class = "text-danger" })
            </div>


            <div class="col-4">
                <label for="TENDEM" class="form-label">Tên đệm</label>
                @Html.EditorFor(model => model.TENDEM, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TENDEM, "", new { @class = "text-danger" })
            </div>



            <div class="col-4">
                <label for="TEN" class="form-label">Tên <span class="text-danger">*</span></label>
                @Html.EditorFor(model => model.TEN, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TEN, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mb-3">
            <label for="NGAYSINH" class="form-label">Ngày sinh <span class="text-danger">*</span></label>
            @Html.EditorFor(model => model.NGAYSINH, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
            @Html.ValidationMessageFor(model => model.NGAYSINH, "", new { @class = "text-danger" })
        </div>

        <div class="form-group mb-3">
            <label for="EMAIL" class="form-label">Email <span class="text-danger">*</span></label>
            @Html.EditorFor(model => model.EMAIL, new { htmlAttributes = new { @class = "form-control", @type = "email", @placeholder = "vd: name@example.com" } })
            @Html.ValidationMessageFor(model => model.EMAIL, "", new { @class = "text-danger" })
            @if (ViewBag.error != null)
            {
                <span class="badge badge-danger">@ViewBag.error</span>
            }
        </div>

        <div class="form-group mb-3">
            <label for="TENDN" class="form-label">Tên đăng nhập <span class="text-danger">*</span></label>
            @Html.EditorFor(model => model.TENDN, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TENDN, "", new { @class = "text-danger" })
            @if (ViewBag.error2 != null)
            {
                <span class="badge badge-danger">@ViewBag.error2</span>
            }
        </div>

        <div class="form-group mb-3">
            <label for="PASS" class="form-label">Mật khẩu <span class="text-danger">*</span></label>
            @Html.EditorFor(model => model.PASS, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
            @Html.ValidationMessageFor(model => model.PASS, "", new { @class = "text-danger" })
        </div>
        <div class="form-group mb-3">
            <label for="ConfirmPassword" class="form-label">Xác nhận mật khẩu <span class="text-danger">*</span></label>
            @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })

        </div>

        <div class="form-group mb-3">
            <label for="IsAdmin" class="form-label">Là Admim <span class="text-danger">*</span></label>
            <div class="col-md-10">
                <div class="checkbox">
                    Đúng @Html.RadioButtonFor(model => model.IsAdmin, "True", new { @checked = "checked" }) &nbsp;
                    Không @Html.RadioButtonFor(model => model.IsAdmin, "False")
                    @Html.ValidationMessageFor(model => model.IsAdmin, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group mb-3">
            <label for="SDT" class="form-label">SĐT <span class="text-danger">*</span></label>
            @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control", @placeholder = "vd: 0708488401" } })
            @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
        </div>
        <div class="form-group mb-3">
            <label for="DIACHI" class="form-label">Địa chỉ <span class="text-danger">*</span></label>
            @Html.EditorFor(model => model.DIACHI, new { htmlAttributes = new { @class = "form-control", @placeholder = "vd: 56KA Cù Lao Thượng, Vĩnh Thọ, Nha Trang, Khánh Hòa" } })
            @Html.ValidationMessageFor(model => model.DIACHI, "", new { @class = "text-danger" })
        </div>




        <button class="btn btn-dark mx-auto mt-3" type="submit">ĐĂNG KÝ</button>
    </form>

    
</div>


