    <div class="mt-4">
        <div class="d-flex justify-content-between align-items-center">
            <h3>@ViewBag.tenLSP</h3>
            <div class="me-2">
                <select class="form-select form-select-sm" id="sort">
                    <option selected>Sắp xếp</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                </select>
            </div>
        </div>

        <hr class="mt-2" />

        <div class="sanpham">
            <div class="row mt-3 gy-3">
                @foreach (var item in Model)
                {
                    <div class="col-3 ">
                        <div class="card w-100 product-item" style="width: 18rem;">
                            <a href="/SANPHAM/Details/@item.MASP">
                                <img src="/Images/@item.IMG" class="card-img-top" style="height: 250px" alt="@item.TENSP">
                            </a>
                            <div class="card-body">
                                <a href="/SANPHAM/Details/@item.MASP" class="text-decoration-none text-dark">
                                    <h5 class="card-title fs-6">@item.TENSP</h5>
                                </a>
                                <p class="card-text text-danger">@item.GIABAN.Value.ToString("N0") vnđ</p>

                            </div>
                        </div>
                    </div>
                }
            </div>

            <ul class="page">
                <li class="page-item"><a class="page-btn btn-prev"><</a></li>
                <li class="page-item"><a class="page-number">1</a></li>
                <li class="page-item"><a class="page-number">2</a></li>
                <li class="page-item"><a class="page-number">3</a></li>
                <li class="page-item"><a class="page-number">4</a></li>
                <li class="page-item"><a class="page-number">5</a></li>
                <li class="page-item"><a class="page-number">6</a></li>
                <li class="page-item "><a class="page-btn btn-next">></a></li>
            </ul>
        </div>
    </div>
</div>

