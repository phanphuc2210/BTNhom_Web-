@model BTNhom_MocPhuc.Models.SANPHAM

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<div class="banner-page">
    <h1 class="text-light fst-italic">Chi tiết sản phẩm</h1>
</div>

<div class="breadcrumb py-3">
    <div class="container">
        <a href="/">Trang chủ &nbsp;</a>
        <a href="/SANPHAM/Categories">Sản phẩm &nbsp;</a>
        <span class="text-origin">Chi tiết sản phẩm</span>
    </div>
</div>

<div class="container">
    <div class="row my-4">
        <div class="col-lg-5">
            <img src="/Images/@Model.IMG" width="100%">
        </div>
        <div class="col-lg-7 d-flex flex-column">
            <h3>@Model.TENSP</h3>
            <div class="hstack gap-3">
                <span class="fw-bold fs-7">Mã sản phẩm:</span>
                <span id="idsp" class="fs-7">@Model.MASP</span>
                <div class="vr"></div>
                <span class="fs-7">Đã bán 1000+</span>
            </div>

            <p class="text-justify mt-3 mb-0">
                @Model.MOTA
            </p>

            <h3 class="mt-3 text-danger">@Model.GIABAN.Value.ToString("N0") vnđ</h3>

            <div class="mt-auto">
                <div class="form-group">
                    <label for="soluong" class="fw-bold mr-2">Số lượng:</label>
                    <span class="btn fw-bold" onclick='handleDecrease()'>-</span>
                    <input class="d-inline form-control text-center" id="soluong" type="text" value="1" style="width:10%;">
                    <span class="btn fw-bold" onclick='handleIncrease()'>+</span>
                </div>

                <a role="button" class="btn btn-dark w-100 mt-3" href="/Cart/AddItem?maSP=@Model.MASP&soLuong=1">Thêm vào giỏ hàng</a>
            </div>
        </div>
    </div>

    <hr />

    <div>
        <h5>Sản Phẩm Tương Tự</h5>

        <div class="row mt-1 gy-3">
            <div class="col-3 ">
                <div class="card w-100 h-100 product-item" style="width: 18rem;">
                    <img src="https://bizweb.dktcdn.net/thumb/large/100/360/933/products/giuong-ngu-go-chat-luong-cao-cho-gia-dinh-ghs-9071-ava.jpg?v=1565273414883" class="card-img-top" alt="...">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fs-6">Giường ngủ gỗ cho gia đình</h5>
                        <p class="card-text mt-auto text-danger">1.000.000 vnd</p>

                    </div>
                </div>
            </div>
            <div class="col-3 ">
                <div class="card w-100 h-100 product-item" style="width: 18rem;">
                    <img src="https://bizweb.dktcdn.net/thumb/large/100/360/933/products/ezgif-2-c7f2105dbc1a.jpg?v=1565273733053" class="card-img-top" alt="...">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fs-6">Giường ngủ gỗ thiết kế thông minh</h5>
                        <p class="card-text mt-auto text-danger">1.000.000 vnd</p>

                    </div>
                </div>
            </div>
            <div class="col-3 ">
                <div class="card w-100 h-100 product-item" style="width: 18rem;">
                    <img src="https://bizweb.dktcdn.net/thumb/large/100/360/933/products/tu-bep-bang-go-tu-nhien-nho-gon-da-nang-tien-loi-ghs-5787-1.jpg?v=1598933882263" class="card-img-top" alt="...">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fs-6">Tủ bếp bằng gỗ đa năng</h5>
                        <p class="card-text mt-auto text-danger">1.000.000 vnd</p>

                    </div>
                </div>
            </div>
            <div class="col-3 ">
                <div class="card w-100 h-100 product-item" style="width: 18rem;">
                    <img src="https://bizweb.dktcdn.net/thumb/large/100/360/933/products/tu-bep-gia-dinh-go-cong-nghiep-nho-gon-da-nang-ghs-5786-1.jpg?v=1598933931677" class="card-img-top" alt="...">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fs-6">Tủ bếp gia đình gỗ công nghiệp</h5>
                        <p class="card-text mt-auto text-danger">1.000.000 vnd</p>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <hr class="mt-4" />

    <div>
        <h5>Đánh Giá - Nhận Xét Từ Khách Hàng</h5>

        <form class="d-flex mt-3" method="post" action="/KHACHHANG/BinhLuan/@Model.MASP">
            <input type="text" class="form-control me-2" name="comment" placeholder="Bình luận gì đó...">
            <button type="submit" class="btn btn-dark">Đăng</button>
        </form>

        <div class="mt-3">
            @if (ViewBag.binhLuan.Count == 0)
            {
                <p class="text-center">Chưa có bình luận nào !!!</p>
            }
            else
            {
                foreach (var item in ViewBag.binhLuan)
                {

                    <div class="my-3">
                        <p class="fw-bold mb-0">@item.KHACHHANG.HO @item.KHACHHANG.TENDEM @item.KHACHHANG.TEN</p>
                        <p class="fs-7 mb-1">@item.THOIGIANBL</p>
                        <div class="comment-frame">
                            <p class="my-0">@item.NOIDUNGBL</p>
                        </div>
                    </div>


                }
            }


        </div>

    </div>
 </div>